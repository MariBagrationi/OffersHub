@model OffersHub.Web.Models.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = $"{Model.Name} - Offers";
}

<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold mb-4">@Model.Name</h2>
    <p class="text-center text-muted">@Model.Description</p>

    <hr />

    @if (Model.Offers != null && Model.Offers.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mt-4">
            @foreach (var offer in Model.Offers)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-success">@offer.Title</h5>
                            <p class="card-text flex-grow-1">@offer.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold text-dark">@offer.Price ₾</span>
                                <a asp-controller="Offer" asp-action="Details" asp-route-id="@offer.Id" class="btn btn-sm btn-outline-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4" role="alert">
            No offers found in this category.
        </div>
    }
</div>
