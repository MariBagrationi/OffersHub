@model IEnumerable<OffersHub.Application.Models.Categories.CategoryServiceModel>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Categories</h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">Add Category</a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No categories available.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var category in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text">@category.Description</p>
                        </div>
                        <div class="card-footer text-end">
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

