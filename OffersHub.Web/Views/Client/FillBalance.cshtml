@model OffersHub.Application.Models.Clients.ClientServiceModel
@{
    ViewData["Title"] = "Add Funds";
}

<div class="container py-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-success mb-4">Add Funds to Wallet</h2>

        <form asp-action="FillBalance" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Balance" class="form-label">Amount to Add</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="Balance" class="form-control" />
                </div>
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-outline-success btn-block w-100">
                <i class="fas fa-wallet"></i> Add Balance
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

