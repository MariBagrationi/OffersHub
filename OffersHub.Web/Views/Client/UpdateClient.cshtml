@model OffersHub.Application.Models.Clients.ClientServiceModel
@{
    ViewData["Title"] = "Update Client";
}

<h2>Update Client</h2>

<form asp-action="UpdateClient" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Balance"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Current Image:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/images/@Model.ImageUrl" alt="Client Image" class="img-thumbnail" style="max-height: 150px;" />
        }
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl">Upload New Image</label>
        <input asp-for="ImageUrl" type="file" class="form-control-file" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Save Changes</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
