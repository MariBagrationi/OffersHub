@model OffersHub.Application.Models.Offers.OfferResponseModel

@{
    ViewData["Title"] = "Offer Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Offer Details</h2>

    <div class="card p-4 shadow-sm">
        <dl class="row mb-0">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price ₾</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Offer Due Date</dt>
            <dd class="col-sm-9">@Model.OfferDueDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Category</dt>

            <dd class="col-sm-9">
                <a asp-controller="Category" asp-action="Details" asp-route-id="@Model.CategoryId" class="btn btn-outline-info btn-sm">
                    View Category
                </a>
            </dd>

            <dt class="col-sm-3">Company</dt>
            <dd class="col-sm-9">
                <a asp-controller="Company" asp-action="GetAll" class="btn btn-outline-info btn-sm">
                    View Company
                </a>
            </dd>

            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="~/images/@Model.Image" alt="Offer Image" class="img-fluid rounded border" style="max-width: 300px;" />
                </dd>
            }
        </dl>

        @*
        <div class="mt-4">
        <a asp-action="GetAll" class="btn btn-secondary me-2">Back to List</a>
        <a asp-action="EditOffer" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
        <a asp-action="DeleteOffer" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
        *@
        
    </div>
</div>

