@using OffersHub.Application.Models.Offers
@model IEnumerable<OfferResponseModel>

@{
    ViewData["Title"] = "My Offers";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4">My Offers</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            You haven't posted any offers yet.
        </div>
    }
    else
    {
        <table class="table table-hover">
            <thead class="table-success">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Expires At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model)
                {
                    <tr>
                        <td>@offer.Title</td>
                        <td>@offer.Description</td>
                        <td>@offer.Price GEL</td>
                        <td>@offer.OfferDueDate.ToShortDateString()</td>
                        <td>
                            <a asp-controller="Offer" asp-action="EditOffer" asp-route-id="@offer.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                            <a asp-controller="Offer" asp-action="DeleteOffer" asp-route-id="@offer.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
