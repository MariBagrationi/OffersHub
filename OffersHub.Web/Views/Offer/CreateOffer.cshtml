@model OffersHub.Web.Models.ViewModels.OfferViewModel

@{
    ViewData["Title"] = "Create Offer";
}

<div class="container mt-4">
    <h2>Create New Offer</h2>

    <form asp-action="CreateOffer" method="post" enctype="multipart/form-data" class="shadow p-4 bg-light rounded mt-4">
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" type="number" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OfferDueDate" class="form-label"></label>
            <input asp-for="OfferDueDate" class="form-control" type="date" />
            <span asp-validation-for="OfferDueDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Category</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Company_UserName" class="form-label">Company</label>
            <input asp-for="Company_UserName" class="form-control" readonly />
            <span asp-validation-for="Company_UserName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success px-4">Create</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

