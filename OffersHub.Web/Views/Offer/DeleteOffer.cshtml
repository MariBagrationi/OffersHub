@model OffersHub.Application.Models.Offers.OfferResponseModel

@{
    ViewData["Title"] = "Delete Offer";
}

<div class="container mt-4">
    <h2 class="text-danger">Are you sure you want to delete this offer?</h2>

    <div class="card mt-3 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            <p class="card-text"><strong>Price:</strong> @Model.Price ₾</p>
            <p class="card-text"><strong>Quantity:</strong> @Model.Quantity</p>
            <p class="card-text"><strong>Offer Ends:</strong> @Model.OfferDueDate.ToShortDateString()</p>
            <p class="card-text"><strong>Company:</strong> @Model.CompanyName</p>
            <p class="card-text"><strong>Category:</strong> @Model.CategoryName</p>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post" class="mt-4">
        @Html.AntiForgeryToken()

        <div class="d-flex gap-3">
            <button type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
</div>

