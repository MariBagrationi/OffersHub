@model OffersHub.Application.Models.Companies.CompanyResponseModel

@{
    ViewData["Title"] = "Delete Company";
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h3 class="text-danger mb-3">Are you sure you want to delete this company?</h3>

        <div class="mb-4">
            <dl class="row">
                <dt class="col-sm-3">Username:</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Active:</dt>
                <dd class="col-sm-9">@Model.IsActive</dd>
            </dl>
        </div>

        <form asp-action="Delete" method="post">
            @* Hidden username to be passed on POST *@
            <input type="hidden" asp-for="UserName" />

            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
