@model OffersHub.Application.Models.Companies.CompanyResponseModel

@{
    ViewData["Title"] = "Company Details";
}

<div class="container mt-4">
    <div class="card p-4 shadow-sm">
        <h3 class="mb-4">Company Details</h3>

        <div class="row">
            <!-- Details on the left -->
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                </dl>

                <div class="mt-3">
                    <a asp-action="GetAll" class="btn btn-secondary">Back to List</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-username="@Model.UserName" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-username="@Model.UserName" class="btn btn-danger">Delete</a>
                    }
                </div>
            </div>

            <!-- Optional image on the right -->
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <div class="col-md-4 text-center">
                    <img src="~/images/companies/@Model.Image" alt="Company Image" class="img-fluid rounded shadow" style="max-height: 300px;" />
                </div>
            }
        </div>
    </div>
</div>
